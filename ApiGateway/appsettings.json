{

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  },

  "ReverseProxy": {
    "Routes": {
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "api/Orders/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/orders" }
        ]
      },

      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "api/Catalog/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/catalog" }
        ]
      },

      "reviews-route": {
        "ClusterId": "reviews-cluster",
        "Match": {
          "Path": "api/Reviews/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/reviews" }
        ]
      }
    },

    "Clusters": {
      "orders-cluster": {
        "Destinations": {
          "orders-service": {
            "Address": "https://localhost:5003"
          }
        }
      },

      "catalog-cluster": {
        "Destinations": {
          "catalog-service": {
            "Address": "https://localhost:5001"
          }
        }
      },

      "reviews-cluster": {
        "Destinations": {
          "reviews-service": {
            "Address": "https://localhost:5002"
          }
        }
      }
    }
  }
}
